<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lj.aichatapp.controllers.MainController">

    <top>
        <ToolBar>
           <items>
               <Label styleClass="title-label" text="JavaFX AI Chat" />
               <Pane HBox.hgrow="ALWAYS" />
               <Button fx:id="btnSettings" onAction="#onOpenSettings" text="âš™" />
               <Button fx:id="btnClear" onAction="#onClearConversation" text="Clear" />
           </items>
        </ToolBar>
    </top>

    <center>
        <!-- Conversation area -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" prefHeight="100.0" prefWidth="711.0" vbarPolicy="AS_NEEDED">
           <content>
               <VBox fx:id="messagesBox" spacing="8">
                   <padding>
                       <Insets bottom="12" left="12" right="12" top="12" />
                   </padding>
               </VBox>
           </content>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="6">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
           <children>
   
               <HBox spacing="8">
      <children>
                      <TextField fx:id="inputField" onAction="#onSendMessage" prefHeight="58.0" prefWidth="224.0" promptText="Type a message..." HBox.hgrow="ALWAYS" />
                      <Button fx:id="btnSend" onAction="#onSendMessage" prefHeight="55.0" prefWidth="83.0" text="Send" />
      </children>
               </HBox>
   
               <HBox spacing="8">
      <children>
                      <Label fx:id="typingIndicator" text="" />
                      <Pane HBox.hgrow="ALWAYS" />
                      <Button onAction="#onCopyLast" prefHeight="39.0" prefWidth="82.0" text="Copy Last" />
      </children>
               </HBox>
           </children>
        </VBox>
    </bottom>

</BorderPane>
